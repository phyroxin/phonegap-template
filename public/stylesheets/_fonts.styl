@font-face
    font-family 'sansationbold'
    src url('fonts/sansation-bold-webfont.eot')
    src url('fonts/sansation-bold-webfont.eot?#iefix') format('embedded-opentype')
    src url('fonts/sansation-bold-webfont.woff') format('woff')
    src url('fonts/sansation-bold-webfont.ttf') format('truetype')
    src url('fonts/sansation-bold-webfont.svg#sansationbold') format('svg')
    font-weight normal
    font-style normal

